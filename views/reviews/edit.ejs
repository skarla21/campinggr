<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="row mt-5">
  <h2 class="text-center mb-5">
    Edit Review for <b><%= campground.title %></b>
  </h2>
  <div class="col-12 col-md-6 offset-md-3">
    <form
      action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=PUT"
      method="POST"
      novalidate
      class="mb-2 validated-form"
    >
      <div>
        <fieldset class="starability-basic">
          <input type="radio" id="first-rate1" name="review[rating]" value="1"
          <% if(review.rating === 1) { %> checked <% } %> />
          <label for="first-rate1" title="Terrible">1 star</label>

          <input type="radio" id="first-rate2" name="review[rating]" value="2"
          <% if(review.rating === 2) { %> checked <% } %> />
          <label for="first-rate2" title="Not good">2 stars</label>

          <input type="radio" id="first-rate3" name="review[rating]" value="3"
          <% if(review.rating === 3) { %> checked <% } %> />
          <label for="first-rate3" title="Average">3 stars</label>

          <input type="radio" id="first-rate4" name="review[rating]" value="4"
          <% if(review.rating === 4) { %> checked <% } %> />
          <label for="first-rate4" title="Very good">4 stars</label>

          <input type="radio" id="first-rate5" name="review[rating]" value="5"
          <% if(review.rating === 5) { %> checked <% } %> />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review Text</label>
        <!-- prettier-ignore -->
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          autofocus
          required
        ><%=review.body%></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">Update Review</button>
    </form>
    <div class="mb-3">
      <a class="btn btn-danger btn-sm" href="/campgrounds/<%= campground._id %>"
        >Cancel</a
      >
    </div>
  </div>
</div>
