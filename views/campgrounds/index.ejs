<% layout("layouts/boilerplate") %>
<div id="cluster-map"></div>

<h1 class="d-flex justify-content-center mt-5 mb-3">All campgrounds!</h1>
<% for (let campground of campgrounds) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(campground.images.length) { %>
      <img
        crossorigin="anonymous"
        class="img-fluid"
        alt=""
        src="<%= campground.images[0].url %>"
      />
      <% } else { %>
      <img
        crossorigin="anonymous"
        class="img-fluid"
        src="https://res.cloudinary.com/dlm8y6xd6/image/upload/v1730994499/camping_default_mkky4k.jpg"
        alt=""
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <a href="/campgrounds/<%= campground._id %>">
          <h5 class="card-title"><%= campground.title %></h5>
        </a>
        <p class="card-text"><%= campground.description %></p>
        <p class="card-text">
          <medium class="text-secondary"><%= campground.location %></medium>
        </p>
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>
