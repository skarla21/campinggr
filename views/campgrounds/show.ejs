<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="row mt-3">
  <div class="col-6">
    <div class="mb-3">
      <% if(campground.images.length) { %>
      <div id="campingCarousel" class="carousel slide">
        <div class="carousel-inner">
          <% let counter = 0; for(let img of campground.images) { %>
          <!-- prettier-ignore -->
          <% if(counter === 0) { %>
          <div class="carousel-item active">
            <img
              crossorigin="anonymous"
              src="<%= img.url %>"
              class="carousel-img d-block w-100"
              alt=""
            />
          </div>
          <% } else { %>
          <div class="carousel-item">
            <img
              crossorigin="anonymous"
              src="<%= img.url %>"
              class="carousel-img d-block w-100"
              alt=""
            />
          </div>
          <% } counter++; } %>
        </div>
        <% if(campground.images.length > 1) { %>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#campingCarousel"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#campingCarousel"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <% } %>
      </div>
      <% } else { %>
      <img
        crossorigin="anonymous"
        class="img-fluid d-block w-100"
        src="https://res.cloudinary.com/dlm8y6xd6/image/upload/v1730994499/camping_default_mkky4k.jpg"
        alt=""
      />
      <% } %>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-secondary">
          <%= campground.location %>
        </li>
        <li class="list-group-item text-secondary">
          Submitted by
          <!-- prettier-ignore -->
          <% if (campground.author)  { %>
          <%= campground.author.username %>
          <% } else { %>
          <i>Removed User</i>
          <% } %>
        </li>
        <li class="list-group-item"><%= campground.price %>â‚¬/night</li>
      </ul>
      <!-- prettier-ignore -->
      <% if( (currentUser && campground.author && campground.author.equals(currentUser._id)) || (currentUser && currentUser.roles.includes('admin')) ) { %>
      <div class="card-body">
        <a
          class="card-link btn btn-info mb-2"
          href="/campgrounds/<%= campground._id %>/edit"
          >Edit</a
        >
        <div>
          <form
            action="/campgrounds/<%= campground._id %>?_method=DELETE"
            method="POST"
            class="validated-form d-flex align-items-center justify-content-start"
            novalidate
          >
            <button type="submit" class="btn btn-danger me-3">
              Delete Campground
            </button>
            <div class="form-check d-inline-flex align-items-center">
              <input
                class="form-check-input me-2"
                type="checkbox"
                id="confirmDelete"
                name="confirmDelete"
                required
              />
              <label class="form-check-label" for="confirmDelete">
                Are you sure? This action cannot be reverted.
              </label>
            </div>
          </form>
        </div>
      </div>
      <% } %>
      <div class="card-footer text-secondary">
        Added: <%= campground.properties.createdAt %>
      </div>
    </div>
  </div>

  <div class="col-6">
    <div class="mb-3" id="map"></div>
    <% if(currentUser) { %>
    <h3>Leave a Review</h3>
    <form
      action="/campgrounds/<%=campground._id%>/reviews"
      method="POST"
      class="mb-5 validated-form"
      novalidate
    >
      <div>
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review Text</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %> <% for (let review of campground.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <div class="mb-2">
          <!-- prettier-ignore -->
          <% if (review.author)  { %>
          <h5 class="card-title d-inline"><%= review.author.username %></h5>
          <% } else { %>
          <div class="card-title d-inline"><i>Removed User</i></div>
          <% } %>
          <div class="card-text text-secondary d-inline">
            - <%= review.properties.lastUpdated %>
          </div>
        </div>
        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated: <%= review.rating %> stars
        </p>
        <p class="card-text"><%= review.body %></p>
        <!-- prettier-ignore -->
        <% if( (currentUser && review.author && review.author.equals(currentUser._id)) || (currentUser && currentUser.roles.includes('admin')) ) { %>
        <a
          class="d-inline card-link btn btn-sm btn-info"
          href="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>

